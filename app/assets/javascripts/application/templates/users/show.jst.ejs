<div class="portfolio">
  <section class="light-container col-xs-12 col-sm-4">
    <h1 class="logo small">Devolio</h1>
    <section id="user_profile">
      <div class="avatar col-xs-3">
        <img src="<%= user_github.aviurl %>" alt="">
      </div>
      <div class="name col-xs-9">
        <h2><%= user_settings.name %></h2>
      </div>
      <p><%= user_settings.description %></p>
      <ul class="icons">
        <li><a href="#" class="entypo-github"></a></li>
        <li><a href="#" class="entypo-twitter"></a></li>
        <li><a href="#" class="entypo-linkedin"></a></li>
      </ul>
      <ul class="contact-info">
        <li class="col-xs-3">Username</li>
        <li class="col-xs-9"><%= user_settings.username %></li>
        <li class="col-xs-3">Email</li>
        <li class="col-xs-9"><%= user_settings.email %></li>
        <li class="col-xs-3">Blog</li>
        <li class="col-xs-9"><%= user_settings.blog_link %></li>
        <li class="col-xs-3">GitHub</li>
        <li class="col-xs-9"><%= user_settings.github_handle %></li>
        <li class="col-xs-3">Twitter</li>
        <li class="col-xs-9"><%= user_settings.twitter_handle %></li>

      </ul>
    </section>
    <section id="user_linkedin">
      <!-- <h3>Experience</h3> -->
      <div class="position">
        <!-- position title -->
        <h4></h4>
        <!-- company -->
        <h5></h5>
        <!-- time span -->
        <p class="time-span"></p>
      </div>
      <!-- <h3>Recommendations</h3> -->
      <p></p>
    </section>
</section>
<section class="dark-container col-xs-12 col-sm-8">
  <section class="user_github">
    <h3>Recent GitHub Activity</h3>
    <ul>
      <li><a href='<%= user_github.aviurl %>'>Your Avatar!</a></li>
      <li><%= user_github.blog_link %>: Link to your blog if you have one</li>
      <li><%= user_github.commitMessages %>random commit message among many!</li>
      <li><%= user_github.commits %> commits</li>
      <li><%= user_github.followersnum %> followers</li>
      <li><%= user_github.followingnum %> following</li>
      <li><%= user_github.forkEvents %> forks</li>
      <li><%= user_github.fullName %> your full name wow</li>
      <li><%= user_github.gistsEvents %> gists</li>
      <li><%= user_github.languages %> language usage!</li>
      <li><%= user_github.lineAdditions %> lines added</li>
      <li><%= user_github.lineDeletions %> lines deleted</li>
      <li>From: <%= user_github.location %></li>
      <li>From: <%= user_github.mostRecentEventDate %></li>
      <li>To: <%= user_github.oldestEventDate %></li>
      <li><%= user_github.profileurl %></li>
      <li><%= user_github.pullEvents %> pulls</li>
      <li><%= user_github.pushEvents %> pushes</li>
      <li><%= user_github.reposnum %> public repos belonging to you</li>
    </ul>
    <div class="data-graphs">
    </div>
  </section>
  <section class="col-xs-6">
    <section id="user_skills">
      <h3>Skills</h3>
      <ul class="skills-list">
        <% for(var i=0; i< user_settings.skills.length; i++) { %>
          <li class="skill-percentage"><%= user_settings.skills[i] %></li>
        <% } %>
      </ul>
    </section>
  </section>
  <section class="col-xs-6">
    <section id="user_tweets">
      <h3>Tweets</h3>
      <ul>
        <% for (var i = 0; i < user_tweets.length; i++) {%>
          <li class='i-am-a-lovely-tweet'><%= user_tweets[i].text %></li>
        <% } %>
      </ul>
    </section>
    <section id="user_interests">
      <h3>Interests</h3>
      <ul class="interests">
        <% for(var i=0; i< user_settings.interests.length; i++) { %>
          <li><%= user_settings.interests[i] %></li>
        <% } %>
      </ul>
    </section>
  </section>
</section>
</div>
