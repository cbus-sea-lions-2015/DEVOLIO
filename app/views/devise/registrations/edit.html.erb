<div class="col-xs-0 col-md-3"></div>
<div class="col-xs-12 col-md-6 light-container">
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :username, class: "col-xs-12 col-md-3" %><br>
    <%= f.text_field :username, class: "col-xs-12 col-md-9" %>
  </div>

  <div class="field">
    <%= f.label :name, class: "col-xs-12 col-md-3" %><br>
    <%= f.text_field :name, class: "col-xs-12 col-md-9" %>
  </div>

  <div class="field">
    <%= f.label :email, class: "col-xs-12 col-md-3" %><br />
    <%= f.email_field :email, autofocus: true, class: "col-xs-12 col-md-9" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, class: "col-xs-12 col-md-3" %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off", class: "col-xs-12 col-md-9" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "col-xs-12 col-md-3" %><br>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "col-xs-12 col-md-9" %>
  </div>

  <div class="field">
    <%= f.label :current_password, class: "col-xs-12 col-md-3" %> <i>(we need your current password to confirm your changes)</i><br>
    <%= f.password_field :current_password, autocomplete: "off", class: "col-xs-12 col-md-9" %>
  </div>

  <div class="field">
    <%= f.label :twitter_handle, class: "col-xs-12 col-md-3" %><br>
    <%= f.text_field :twitter_handle, class: "col-xs-12 col-md-9" %>
  </div>

  <div class="field">
    <%= f.label :description, class: "col-xs-12 col-md-3" %><i>(a short 2-3 sentence description on why you decided to become a developer)</i><br>
    <%= f.text_area :description, class: "col-xs-12 col-md-9" %>
  </div>

  <div class="field">
    <%= f.label :interests, class: "col-xs-12 col-md-3" %><br>
    <%= f.text_field :interests, class: "col-xs-12 col-md-9" %>
  </div>

  <div class="field">
    <%= f.label :skills, class: "col-xs-12 col-md-3" %><br>
    <%= f.text_field :skills, class: "col-xs-12 col-md-9" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
  <% end %>



<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
</div>
<div class="col-xs-0 col-md-3"></div>
