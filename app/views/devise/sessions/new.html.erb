<div class="col-xs-0 col-md-3"></div>
<div class="col-xs-12 col-md-6 light-container">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="error">

    <%= devise_error_messages! %>
  </div>
  <fieldset>
    <%= f.label :email, class: "col-xs-12 col-md-5" %>
    <%= f.email_field :email, autofocus: true, class: "col-xs-12 col-md-7" %>
  </fieldset>

  <fieldset>
    <%= f.label :password, class: "col-xs-12 col-md-5" %>
    <%= f.password_field :password, autocomplete: "off", class: "col-xs-12 col-md-7" %>
  </fieldset>

  <% if devise_mapping.rememberable? -%>
    <fieldset>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </fieldset>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>
</div>
<div class="col-xs-0 col-md-3"></div>
